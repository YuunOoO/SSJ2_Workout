<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.Goals"
             xmlns:vm="clr-namespace:SSJ2_Workout.ViewModels"
             NavigationPage.HasNavigationBar="False" BackgroundImageSource="backGoals">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="banner" Grid.ColumnSpan="2" Aspect="AspectFill"></Image>
                <ImageButton Source="backIcon" Clicked="GoToMenu" Grid.Column="0" Aspect="AspectFit" 
                                 BackgroundColor="Transparent" HorizontalOptions="Start"></ImageButton>
            </Grid>
            <Label Text="Wybierz swoje cel!" x:Name="Noti" FontSize="26" HorizontalTextAlignment="Center" TextColor="Black" FontAttributes="Bold"/>
            <Picker x:Name="goalPicker" SelectedIndexChanged="goalChoice" TextColor="White" TitleColor="White" 
                    HorizontalTextAlignment="Center" BackgroundColor="#CC312974" 
                    Title="Wybierz cel treningów" Margin="10,5,10,5"/>

            <Button Text="Oblicz zapotrzebowanie kaloryczne." Clicked="KcalNeed" Margin="10,5,10,5" CornerRadius="30">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC2868c9" Offset="0.0"/>
                        <GradientStop Color="#CC312974" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label Text="Zapotrzebowanie: " x:Name="Noti2" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label x:Name="Noti3" FontSize="20" HorizontalTextAlignment="Center"/>
            <Entry x:Name="WlasneKcalEntry" Placeholder="Podaj własne zapotrzebowanie" HorizontalTextAlignment="Center" TextColor="White" 
                   BackgroundColor="#CC312974" PlaceholderColor="White" Margin="0,20,0,5"/>

            <Slider x:Name="slider" IsVisible="false"
                Maximum="100"
                    Minimum="0"
                    ValueChanged="OnSliderValueChanged"
                    />

            <Label x:Name="displayLabel"  
               Text="{Binding Source={x:Reference slider},
                              Path=Value,
                              StringFormat='The Slider value is {0:F0}'}"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" FontSize="20"  TextColor="White" IsVisible="false"/>
            <Label x:Name="pomoc" HorizontalOptions="Center" IsVisible="false"
               VerticalOptions="CenterAndExpand" FontSize="16"  TextColor="White"/>
            <Button Text="zatwierdz" Clicked="btnZatwierdz_Clicked" CornerRadius="30" IsVisible="false" x:Name="btnZatwierdz">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC2868c9" Offset="0.0"/>
                        <GradientStop Color="#CC312974" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>