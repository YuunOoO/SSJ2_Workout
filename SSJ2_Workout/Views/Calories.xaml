<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.Calories"
             Title="Kalorie">
    <ContentPage.Content>
        <StackLayout>
            <Frame HeightRequest="70" WidthRequest="400"
               BackgroundColor="#CC30324d" Margin="5"
               HasShadow="True" Padding="0" CornerRadius="35"
               HorizontalOptions="Center" 
               >
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GoToDelivered" NumberOfTapsRequired="1" />
                </Frame.GestureRecognizers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Przejdz do dostarczanych kalori!" Grid.Row="0" Grid.Column="1"
                       TextColor="Black" FontSize="20" FontAttributes="Bold"
                       VerticalTextAlignment="Center"></Label>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>