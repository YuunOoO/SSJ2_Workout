<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.CaloriesDeliverd"
             Title="Dostarczone kalorie">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Label Text="{Binding Suma}" Grid.Column="1" x:Name="testowy"/>
            <Button Text="Sumuj kalorie" Clicked="CheckCalories" Grid.Column="1"/>
            <Entry x:Name="nameEntry" Placeholder="Podaj artykuł" />
            <Entry x:Name="caloriesEntry" Placeholder="Podaj ilosc kalori" />
            <Button Text="Dodaj do bazy" Clicked="OnButtonClicked" />
            <CollectionView x:Name="collectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="Medium" />
                            <Label Text="{Binding Calories}" FontSize="Medium"  />
                            <ImageButton Source="iconmoins.png"  HeightRequest="30" WidthRequest="30" Clicked="DeleteButtonClicked"></ImageButton>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>