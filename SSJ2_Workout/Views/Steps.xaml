<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.Steps"
             Title="Aktywność / Kroki">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#1e1f26">
            <Label Grid.Row="0" Grid.Column="2" x:Name="LabelX" TextColor="white" />
            <Label Grid.Row="1" Grid.Column="2" x:Name="LabelY" TextColor="White"/>
            <Label Grid.Row="2" Grid.Column="2" x:Name="LabelZ" TextColor="White" />
            <Label x:Name="mylabel"  Text="Ilosc krokow" Grid.Row="5" Grid.Column="0" TextColor="White"/>
            <Button Grid.Row="3" Grid.Column="0" Text="Start" x:Name="ButtonStart" Clicked="ButtonClicked" />
            <Button Text="Licz Kroki"  x:Name="myBtn" IsVisible="False" Clicked="Button_Clicked2" Grid.Row="4" Grid.Column="0"/>
            <Label Grid.Row="6" Grid.Column="2" x:Name="testowy" TextColor="White" Text="Czy sa uprawnienia?"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>