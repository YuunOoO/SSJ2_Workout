<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.BodyParameters"
             Title="Parametry ciała / BMI">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="#1e1f26">
            <Entry x:Name="wiekEntry" Placeholder="Podaj Wiek" TextColor="White" BackgroundColor="Gray"/>
            <Entry x:Name="wzrostEntry" Placeholder="Podaj wzrost(cm)" TextColor="White" BackgroundColor="Gray"/>
            <Entry x:Name="wagaEntry" Placeholder="Podaj Wage(kg)" TextColor="White" BackgroundColor="Gray"/>
            <Picker x:Name="genderPicker" SelectedIndexChanged="genderChoice" TextColor="White" TitleColor="Gray" BackgroundColor="Gray" Title="Wybierz płeć"/>
            <Picker x:Name="actionPicker" SelectedIndexChanged="actionChoice" TextColor="White" TitleColor="Gray" BackgroundColor="Gray" Title="Wybierz stopien aktywnosci fizycznej(mnożnik)"/>
            <Button Text="Zmiana parametrów ciała!" Clicked="BodyChange" BackgroundColor="Green"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>