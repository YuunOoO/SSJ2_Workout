<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.BodyParameters"
             Title="Parametry ciała / BMI" BackgroundImageSource="backBMI">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="10">

            <Entry x:Name="wiekEntry" Placeholder="Podaj Wiek" HorizontalTextAlignment="Center" TextColor="White" 
                   BackgroundColor="#CC312974" PlaceholderColor="White" Margin="0,20,0,5"/>
            <Entry x:Name="wzrostEntry" Placeholder="Podaj wzrost(cm)" HorizontalTextAlignment="Center" TextColor="White" 
                   BackgroundColor="#CC312974" PlaceholderColor="White" Margin="0,5,0,5"/>
            <Entry x:Name="wagaEntry" Placeholder="Podaj Wage(kg)" HorizontalTextAlignment="Center" TextColor="White" 
                   BackgroundColor="#CC312974" PlaceholderColor="White" Margin="0,5,0,5"/>

            <Picker x:Name="genderPicker" SelectedIndexChanged="genderChoice" TextColor="White" TitleColor="White" 
                    HorizontalTextAlignment="Center" BackgroundColor="#CC312974" Title="Wybierz płeć" Margin="0,5,0,5"/>
            <Picker x:Name="actionPicker" SelectedIndexChanged="actionChoice" TextColor="White" TitleColor="White" 
                    HorizontalTextAlignment="Center" BackgroundColor="#CC312974" 
                    Title="Wybierz stopien aktywnosci fizycznej(mnożnik)" Margin="0,5,0,5"/>
            
            <Button Text="Zmiana parametrów ciała!" Clicked="BodyChange" CornerRadius="30" VerticalOptions="EndAndExpand">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC2868c9" Offset="0.0"/>
                        <GradientStop Color="#CC312974" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>