<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSJ2_Workout.Views.Stoper">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label x:Name="topek" Text="Podaj czas do odmierzenia(sekundy) lub uruchom stoper!"/>
        <Entry Placeholder="Podaj liczbe sekund do odmierzenia" x:Name="timeEntry"/>
        <Button Text="Odmierzaj czas" x:Name="timeBtn" Clicked="timeBtn_Clicked"/>
        <Label HorizontalOptions="Center" FontSize="45" TextColor="#00A8E8" x:Name="lbl_result">
        </Label>
        <Button  x:Name="BtnStart" Text="Start" Clicked="BtnStart_Clicked"/>
        <Button  x:Name="BtnStop" Text="Stop" Clicked="BtnStop_Clicked"/>
        <Button  x:Name="BtnReset" Text="Reset" Clicked="BtnReset_Clicked"/>
    </StackLayout>
</ContentPage>